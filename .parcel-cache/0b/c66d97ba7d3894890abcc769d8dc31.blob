/* css reset */
*{box-sizing: border-box;}
*:before,*:after{box-sizing: border-box;}
*{margin:0; padding:0;}
ul,ol{ list-style: none; }

/* style */
body {
  background: #eee;
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  font-size: 14px;
  position: relative;
  font-weight: lighter;
}
.globalHeader { 
}
.searchWrap {
  display: none;
  display: flex;
  min-width: 350px;
  height: 46px;
  background: #FFFFFF;
  box-shadow: 0 1px 3px rgba(0, 0, 0, .1);
  border-radius: 4px;
  margin: 20px auto 160px auto;
  position: relative;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  filter: alpha(opacity=100);
  -moz-opacity: 1;
  -khtml-opacity: 1;
  opacity: 1;
  transition:transform .3s,opacity .5s;
  z-index: 2;
}
#searchForm {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100%;
}
#search {
  /*background: cadetblue; */
  border: none;
  height: 98%;
  margin-right: 30px;
  padding:0 0px 0 2px;
  box-sizing: border-box; 
  outline:none;
  font-size: 16px;
  flex:1;
  font-weight: lighter;
  color: #333333;;
}
#search-btn {
  cursor: pointer;

  width:65px;
  height:100%;    
  /*background: url(/static/home/images/searchbtn20.png) no-repeat;*/
  /* background-color: rgb(138, 0, 252); */
  background-size:20px 20px;
  background-position: center;
  border-radius:2px;
  outline: none;
  border:0 none;
  display:none;
}
