.globalMain {
  width: 90%;
  max-width: 1000px;
  min-width: 320px;
  margin:auto;
}
.siteWrap {
  width: 100%;
  position: relative;
  margin: 0 auto;
}
.siteWrap .siteContainer{
  border:1px solid red;
  /*position: absolute;*/
  width: 100%;
  list-style: none;
  margin: 0 auto;
  padding: 0;
  display: flex;
  flex-flow: row wrap;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}
.siteWrap .siteContainer .site-a {
  /*position: absolute;
  width: 46px;
  height: 46px;
  left: 33px;
  top: 297px;*/
  text-align: center;
  text-decoration: none;
  margin:0px 15px 18px 15px;
  filter: alpha(opacity=80);
  -moz-opacity: 0.8;
  -khtml-opacity: 0.8;
  opacity: 0.8;
  /*transition:transform .3s,opacity .3s;*/

  background: #FFFFFF;
  /*border-radius: 100px;*/
}
.site-li {
  width: 46px;
  height: 46px;
  background-color: #FFFFFF;
  box-shadow: 0 1px 3px rgba(0, 0, 0, .1);
  border-radius: 50%;
  line-height: 0px;
  margin: 0px 10px 0px 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.siteWrap .siteContainer .site > .siteTitle{
  display: block;
  margin: 4px auto 0px auto;
  width: 100px;
  text-shadow: 0 1px 3px rgba(0, 0, 0, .4);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-weight: lighter;
  font-size: 12px;
}
.siteContainer .addButton { }
