/* css reset */
*{box-sizing: border-box;}
*:before,*:after{box-sizing: border-box;}
*{margin:0; padding:0;}
ul,ol{ list-style: none; }

/* style */
body {
  background: #eee;
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  font-size: 14px;
  position: relative;
  font-weight: lighter;
}
#mainWrap { 
  width: 90%;
  max-width: 1000px;
  min-width: 320px;
  margin:auto;
}
#searchWrap {
  border:1px solid red;
  display: none;
  display: flex;
  width: 84%;
  min-width: 350px;
  height: 54px;
  background: #FFFFFF;
  box-shadow: 0 1px 3px rgba(0, 0, 0, .1);
  border-radius: 4px;
  margin: 215px auto 36px auto;
  position: relative;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  filter: alpha(opacity=100);
  -moz-opacity: 1;
  -khtml-opacity: 1;
  opacity: 1;
}
#searchForm {
  width: 100%;
  flex: 1;
  display: flex;
  /*justify-content: space-between;
  align-items: center;*/
  height: 100%;
}
#search {
  border:1px solid blue;
  /*border: none;*/
  height: 100%;
  margin-left: 10px;
  padding: 0;
  box-sizing: border-box; 
  outline:none;
  font-size: 16px;
  flex:2;
  font-weight: lighter;
  color: #333333;;
}
#search-btn {
  border:1px solid black;
  cursor: pointer;

  width:65px;
  height:100%;    
  /*background: url(/static/home/images/searchbtn20.png) no-repeat;*/
  /* background-color: rgb(138, 0, 252); */
  /*background-size:20px 20px;
  background-position: center;
  border-radius:2px;*/
  outline: none;
  /*border:0 none;*/
  display:none;
}

#siteWrap {
  width: 100%;
  position: relative;
  margin: 0 auto;
}
#siteContainer{
  width: 100%;
  list-style: none;
  margin: 0 auto;
  padding: 0;
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
}
.site-a {
  text-align: center;
  text-decoration: none;
  margin:0px 15px 18px 15px;
  filter: alpha(opacity=100);
  -moz-opacity: 1;
  -khtml-opacity: 1;
  opacity: 1;
  color: #FFFFFF;
}
.site-li {
  width: 54px;
  height: 54px;
  background-color: #FFFFFF;
  box-shadow: 0 1px 3px rgba(0, 0, 0, .1);
  border-radius: 50%;
  line-height: 0px;
  margin: 0px 10px 0px 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.siteTitle{
  font-weight: 400;
  display: block;
  margin: 4px auto 0px auto;
  width: 100px;

  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 13px;
  color: rgba(0, 0, 0, 1);
}
