/* css reset */
*{box-sizing: border-box;}
*:before,*:after{box-sizing: border-box;}
*{margin:0; padding:0;}
ul,ol{ list-style: none; }

/* style */
body {
  background-color: #eee;
}
.globalHeader {border: 1px solid red;
  margin: 215px 30px 36px 30px;
  display: flex;
  justify-content: space-between;
}
.globalHeader > input {
  width: 100%;
  height: 46px;
  padding: 0 10px;
  border: 1px solid #ddd;
  border-radius: 4px;
}

.globalHeader > button {
  border: none;
  border-radius: 4px;
  white-space: nowrap;
}

