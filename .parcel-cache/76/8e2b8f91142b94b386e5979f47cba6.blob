const hashMap = [
    {logo: 'https://juejin.cn/favicon.ico', url: 'https://juejin.cn/', name: '掘金'},
    {logo: 'https://github.com/favicon.ico', url: 'https://github.com/', name: 'GitHub'},
]

hashMap.forEach(node=>{
    const $li = $(`<li>
          <a href="${node.url}">
            <div class="site">
              <div class="logo">
                ${node.logo}
              </div>
                <div class="title">${node.name}</div>
            </div>
          </a>
    </li>`)
})

