$('.addButton')
  .on('click', ()=>{
      let name = window.prompt('名称')
      let url = window.prompt('网址') 
      if(url.indexOf('http')!==0){
          url = 'https://' + url
      }
      const $siteList = $('.siteList')
      console.log($siteList)
      const $li = $(`<li>
      <a href="${url}">
                    <div class="site">
                        <div class="logo">
                            <img src="./images/juejin.png" alt="">
                        </div>
                        <div class="title">${name}</div>
                    </div>
                </a>
      </li>`)
  })